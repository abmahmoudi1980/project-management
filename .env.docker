# Docker Environment Configuration
# Copy this file to .env and update with your production values

# PostgreSQL Configuration
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=project_management
DB_PORT=5432

# Database URL (auto-constructed from above for Docker)
# DATABASE_URL=postgres://postgres:password@postgres:5432/project_management?sslmode=disable

# Debug logging (very verbose)
DB_LOG_SQL=false

# JWT Configuration
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=https://task.mahmoudi.cloud

# Server Configuration
SERVER_PORT=3000

# Timezone
TZ=Asia/Tehran

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
MAX_TOTAL_SIZE=104857600
THUMBNAIL_SIZE=200
